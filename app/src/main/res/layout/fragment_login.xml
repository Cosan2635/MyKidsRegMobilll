<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".LoginFragment">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="42dp"
            android:background="@drawable/logo_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log ind og kom igang!"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indtast venligst dine oplysninger:"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Username EditText -->
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_rounded_edittext"
            android:drawableLeft="@drawable/icon_account"
            android:drawablePadding="8dp"
            android:hint="Indtast dit brugernavn"
            android:padding="12dp" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_rounded_edittext"
            android:hint="Indtast din adgangskode"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/icon_password"
            android:drawableRight="@drawable/icon_password_eye"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_button"
            android:padding="12dp"
            android:text="Login"
            android:textSize="17dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glemt adgangskode?"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/forgotPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klik her for glemt adgangskode"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</layout>

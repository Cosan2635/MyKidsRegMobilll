<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HelpAndContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/app_background"
        android:padding="16dp"
        android:gravity="center">

        <!-- Title for Help and Contact section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hjælp og Kontakt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Help information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Her kan du finde hjælp og kontaktinformation."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Contact information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon: 123-456-7890\nEmail: contact@example.com"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Logo Image Placeholder -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_image"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal" />

        <!-- Additional Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I en travl hverdag, hvor forældre beskæftiger sig med arbejde, familieliv og andre opgaver, kan det være en udfordring at holde styr på alt, især når det kommer til børnenes behov og aktiviteter i daginstitutioner. Her træder MyKidsReg ind, og gør det lettere for forældre hvor formålet er at sørge for en mere organiseret hverdag."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

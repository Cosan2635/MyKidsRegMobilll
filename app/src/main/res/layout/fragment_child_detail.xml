<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/app_background"
        android:padding="16dp">

        <!-- TextView for date -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Datetime"
            android:layout_marginBottom="8dp" />

        <!-- TextView for name -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Navn:"
            android:layout_marginBottom="8dp" />

        <!-- TextView for arrival time -->
        <TextView
            android:id="@+id/textViewArrivalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Ankomst:"
            android:layout_marginBottom="8dp" />

        <!-- TextView for collection time -->
        <TextView
            android:id="@+id/textViewCollectionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Afhent:"
            android:layout_marginBottom="8dp" />

        <!-- TextView for reason for absence -->
        <TextView
            android:id="@+id/textViewReasonForAbsence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="FravÃ¦rs grund:"
            android:layout_marginBottom="8dp" />

        <!-- Switch for indicating if the child is on leave -->
        <Switch
            android:id="@+id/switchOnLeave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ferie tilstand" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
